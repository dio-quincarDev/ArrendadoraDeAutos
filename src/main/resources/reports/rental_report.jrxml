<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="RentalReport" pageWidth="595" pageHeight="842" 
              columnWidth="555" leftMargin="20" rightMargin="20" 
              topMargin="20" bottomMargin="20"
              uuid="a1b2c3d4-e5f6-4a5b-8c9d-0e1f2a3b4c5d">
              
    <!-- Estilos globales para el informe -->
    <style name="Base" isDefault="true" fontName="Arial" fontSize="10"/>
    <style name="Title" style="Base" fontSize="20" isBold="true" forecolor="#FFFFFF"/>
    <style name="Header" style="Base" fontSize="11" isBold="true" forecolor="#FFFFFF" 
           backcolor="#3F51B5" mode="Opaque"/>
    <style name="DetailEven" style="Base" backcolor="#F5F5F5" mode="Opaque"/>
    <style name="DetailOdd" style="Base" backcolor="#FFFFFF" mode="Opaque"/>
    <style name="Amount" style="Base" forecolor="#1976D2" isBold="true"/>
    <style name="Status" style="Base" isBold="true"/>

    <parameter name="LOGO_PATH" class="java.lang.String"/>
    <parameter name="REPORT_DATE" class="java.util.Date" isForPrompting="false"/>
    
    <field name="id" class="java.lang.Long"/>
    <field name="customerName" class="java.lang.String"/>
    <field name="vehicleBrand" class="java.lang.String"/>
    <field name="vehicleModel" class="java.lang.String"/>
    <field name="rentalStatus" class="com.alquiler.car_rent.commons.enums.RentalStatus"/>
    <field name="startDate" class="java.time.LocalDateTime"/>
    <field name="endDate" class="java.time.LocalDateTime"/>
    <field name="totalPrice" class="java.math.BigDecimal"/>
    
    <!-- Variables para estadísticas -->
    <variable name="totalAmount" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{totalPrice}]]></variableExpression>
    </variable>
    <variable name="rentalCount" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{id}]]></variableExpression>
    </variable>

    <background>
        <band height="802">
            <rectangle radius="15">
                <reportElement x="0" y="0" width="555" height="802" forecolor="#E0E0E0" backcolor="#FFFFFF" mode="Opaque"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineStyle="Solid"/>
                </graphicElement>
            </rectangle>
        </band>
    </background>

    <title>
        <band height="90">
            <rectangle radius="10">
                <reportElement x="0" y="0" width="555" height="80" backcolor="#3F51B5" mode="Opaque"/>
            </rectangle>
            <image>
                <reportElement x="10" y="10" width="60" height="60"/>
                <imageExpression><![CDATA[$P{LOGO_PATH}]]></imageExpression>
            </image>
            <staticText>
                <reportElement style="Title" x="80" y="15" width="455" height="30"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <text><![CDATA[Reporte de Alquileres]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="80" y="45" width="200" height="20" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{REPORT_DATE}]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="400" y="45" width="135" height="20" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER} + " de " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="40">
            <staticText>
                <reportElement style="Header" x="0" y="10" width="40" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[ID]]></text>
            </staticText>
            <staticText>
                <reportElement style="Header" x="40" y="10" width="110" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Cliente]]></text>
            </staticText>
            <staticText>
                <reportElement style="Header" x="150" y="10" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Marca]]></text>
            </staticText>
            <staticText>
                <reportElement style="Header" x="230" y="10" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Modelo]]></text>
            </staticText>
            <staticText>
                <reportElement style="Header" x="310" y="10" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Fecha Inicio]]></text>
            </staticText>
            <staticText>
                <reportElement style="Header" x="390" y="10" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Estado]]></text>
            </staticText>
            <staticText>
                <reportElement style="Header" x="470" y="10" width="85" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Precio]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="30">
            <rectangle radius="5">
                <reportElement key="even" x="0" y="0" width="555" height="30" backcolor="#F5F5F5" mode="Opaque">
                    <printWhenExpression><![CDATA[$V{REPORT_COUNT} % 2 == 0]]></printWhenExpression>
                </reportElement>
            </rectangle>
            <rectangle radius="5">
                <reportElement key="odd" x="0" y="0" width="555" height="30" backcolor="#FFFFFF" mode="Opaque">
                    <printWhenExpression><![CDATA[$V{REPORT_COUNT} % 2 != 0]]></printWhenExpression>
                </reportElement>
            </rectangle>
            
            <textField>
                <reportElement x="5" y="0" width="35" height="30"/>
                <textElement verticalAlignment="Middle" textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{id}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="45" y="0" width="105" height="30"/>
                <textElement verticalAlignment="Middle" textAlignment="Left"/>
                <textFieldExpression><![CDATA[$F{customerName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="0" width="80" height="30"/>
                <textElement verticalAlignment="Middle" textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{vehicleBrand}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="230" y="0" width="80" height="30"/>
                <textElement verticalAlignment="Middle" textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{vehicleModel}]]></textFieldExpression>
            </textField>
            <textField pattern="dd/MM/yyyy">
                <reportElement x="310" y="0" width="80" height="30"/>
                <textElement verticalAlignment="Middle" textAlignment="Center"/>
                <textFieldExpression><![CDATA[java.sql.Timestamp.valueOf($F{startDate})]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="390" y="0" width="80" height="30"/>
                <textElement verticalAlignment="Middle" textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{rentalStatus}.name().equals("ACTIVE") ? "ACTIVO" :
                                            $F{rentalStatus}.name().equals("COMPLETED") ? "COMPLETADO" :
                                            $F{rentalStatus}.name().equals("CANCELLED") ? "CANCELADO" : 
                                            $F{rentalStatus}]]></textFieldExpression>
            </textField>
            <textField pattern="¤ #,##0.00">
                <reportElement x="475" y="0" width="75" height="30" forecolor="#1976D2"/>
                <textElement verticalAlignment="Middle" textAlignment="Right">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalPrice}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
    
    <summary>
        <band height="100">
            <rectangle radius="10">
                <reportElement x="0" y="10" width="555" height="80" backcolor="#F5F5F5" mode="Opaque"/>
            </rectangle>
            <staticText>
                <reportElement x="10" y="20" width="200" height="30" forecolor="#3F51B5"/>
                <textElement verticalAlignment="Middle">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[Resumen]]></text>
            </staticText>
            <staticText>
                <reportElement x="10" y="50" width="120" height="20"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Total de alquileres:]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="50" width="100" height="20" forecolor="#3F51B5"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{rentalCount}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="280" y="50" width="120" height="20"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Monto total:]]></text>
            </staticText>
            <textField pattern="¤ #,##0.00">
                <reportElement x="400" y="50" width="145" height="20" forecolor="#3F51B5"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true" size="12"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{totalAmount}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>